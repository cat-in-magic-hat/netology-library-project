<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Заголовок</label>
        <input type="text"
            value="<%= book.title %>"
            name="title"
            class="form-control"
            id="title"/>
    </div>

    <div class="form-group">
        <label for="description">Описание</label>
        <textarea type="text"
            rows="3"
            name="description"
            class="form-control"
            id="description"><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="authors">Автор</label>
        <input type="text"
            value="<%= book.authors %>"
            name="authors"
            class="form-control"
            id="authors"/>
    </div>

    <div class="form-group">
        <label for="favorite">Избранное</label>
        <input type="text"
            value="<%= book.favorite %>"
            name="favorite"
            class="form-control"
            id="favorite"/>
    </div>

    <div class="form-group">
        <label for="fileCover">Обложка книги</label>
        <input type="text"
            value="<%= book.fileCover %>"
            name="fileCover"
            class="form-control"
            id="fileCover"/>
    </div>

    <div class="form-group">
        <label for="fileName">Наименование файла</label>
        <input type="text"
            value="<%= book.fileName %>"
            name="fileName"
            class="form-control"
            id="fileName"/>
    </div>

    <div class="form-group">
        <label for="bookFile">Файл книги</label>
        <input type="file"
            value="<%= book.fileBook %>"
            name="bookFile"
            class="form-control"
            id="bookFile"/>
    </div>

    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>