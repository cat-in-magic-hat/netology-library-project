<%- include("../partials/layout-start", { title }) %>
<h1 class="display-4"><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <% if (book.fileCover) { %>
                <img class="card-img-top" src="<%= book.fileCover %>" alt="<%= book.fileName %>" style="max-width: 400px;">
                <% } %>
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-subtitle">Автор: <%= book.authors %></p>                
                <p class="card-text"><%= book.description %></p>
                <% if (book.fileBook) { %>
                <a href="/api/books/<%= book.id %>/download" class="card-link">Скачать книгу</a>
                <% } %>
                <% if (viewsAmount) { %>
                    <div><small>Просмотров: <%= viewsAmount %></small></div>
                <% } %>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        Редактировать
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>